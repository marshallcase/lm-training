{
  "model": {
    "vocab_size": 50257,
    "hidden_size": 256,
    "num_hidden_layers": 6,
    "num_attention_heads": 8,
    "intermediate_size": 1024,
    "hidden_act": "gelu",
    "hidden_dropout_prob": 0.1,
    "attention_dropout_prob": 0.1,
    "max_position_embeddings": 1024,
    "layer_norm_eps": 1e-12,
    "tie_word_embeddings": true,
    "pad_token_id": 0
  },
  "training": {
    "output_dir": "outputs/lm-wikitext",
    "seed": 42,
    "train_batch_size": 8,
    "eval_batch_size": 8,
    "gradient_accumulation_steps": 4,
    "learning_rate": 5e-5,
    "weight_decay": 0.01,
    "adam_beta1": 0.9,
    "adam_beta2": 0.999,
    "adam_epsilon": 1e-8,
    "max_grad_norm": 1.0,
    "num_train_epochs": 3,
    "max_steps": -1,
    "warmup_steps": 0,
    "warmup_ratio": 0.1,
    "logging_steps": 100,
    "save_steps": 1000,
    "save_total_limit": 3,
    "evaluation_strategy": "steps",
    "eval_steps": 500,
    "use_amp": true
  },
  "data": {
    "train_file": "data/processed/train.txt",
    "validation_file": "data/processed/valid.txt",
    "tokenizer_name": "gpt2",
    "max_seq_length": 1024,
    "preprocessing_num_workers": 4,
    "overwrite_cache": false,
    "pad_to_max_length": true,
    "mlm": false,
    "clm": true,
    "mlm_probability": 0.15
  }
}